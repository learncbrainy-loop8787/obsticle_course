<div class="form">
  <h1>New teacher</h1>
  <form action="/teachers" method="post">
    <div class="form-group">
      <label>Name</label>
      <input type="text" class="form-control" name="name" required placeholder="Teacher name"><br>
      <label>Bio</label>
      <textarea type="text" class="form-control" name="bio" placeholder="Your teacher bio here (optional)" rows="6"></textarea><br>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
