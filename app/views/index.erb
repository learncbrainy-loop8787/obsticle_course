<div class="course-list">
  <h2>Upcoming Courses</h2>
    <% @courses.sort_by {|x| x.course_date }.each do |course| %>
      <% if course.course_date >= Date.today%>
        <p class="course-info"><%= "#{course.course_date.strftime("%m/%d/%Y")} - #{course.teacher.name} - #{course.location} - "%><a href="/courses/<%=course.id%>">See details</a></p>
      <% end %>
    <% end %>
  <h2>Past Courses</h2>
  <% @courses.all.sort_by {|x| x.course_date }.each do |course| %>
    <% if course.course_date < Date.today %>
      <p class="course-info"><%= "#{course.course_date.strftime("%m/%d/%Y")} - #{course.teacher.name} - #{course.location} - "%><a href="/courses/<%=course.id%>">See details</a></p>
    <% end %>
  <% end %>
</div>
